= form_for [:admin, @nota] do |f|
  - if @nota.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nota.errors.count, "error")} prohibited this note from being saved:"

      %ul
        - @nota.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.text_area :body

  .actions
    = f.submit

