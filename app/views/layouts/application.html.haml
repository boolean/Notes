!!!
%html
  %head
    %title
      = yield(:title) || "Tips & Notes"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "application","tipsy","menu","jquery", 'highlight'
    = javascript_include_tag :defaults,'jquery.tipsy','jquery-ui-1.8.6.custom.min'
    = javascript_include_tag :on_the_spot, :ckeditor, 'jquery.form', 'jquery.validate.min'
    = csrf_meta_tag
    = yield(:head)

  %body
    #header
      = link_to root_path do
        #title
          = "Tips & Notes"
          #subtitle
            %span
              %small shared notes
    .clear
    #container
      #side_panel
        .wrap#user_information
          - if current_user
            %p
              Welcome:
              %b
                = current_user.email
            %p
              = link_to "edit your profile", edit_user_registration_path
            %p
              = link_to "Log Out", destroy_user_session_path
            %p
              My Notes:
              = current_user.notas.size
          - else
            = link_to "LogIn", new_user_session_path

        .wrap#links_notes
          %p= link_to "New Note", new_nota_path
          %br
          %p= link_to "All Notes", root_url
        .wrap#tag_cloud
          %h3 Tags
          - tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class|
            = link_to tag.name, search_by_tag_path(tag.name), :class => css_class

      #content
        = yield

